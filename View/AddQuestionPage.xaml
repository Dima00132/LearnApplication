<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnApplication.View.AddQuestionPage" >
    <VerticalStackLayout>
        <Frame>
            <Editor Text="{Binding Question}" TextColor="Black" Placeholder ="Введите вопрос" PlaceholderColor="DarkGray"/>
        </Frame>
        <Frame>
            <Editor Text="{Binding Answer}" TextColor="Black"  Placeholder ="Введите ответ" PlaceholderColor="DarkGray"/>
        </Frame>

        <Frame>
            <Editor Text="{Binding Hyperlink}" Keyboard="Url" IsReadOnly="true"  TextColor="Black" PlaceholderColor="DarkGray" Placeholder ="Ссылка на дополнительнй материал"/>
        </Frame>

        <Frame>
            <StackLayout Padding="8">
                <Label Text="Я это помню?" FontSize="16" TextColor="Black" />
                <Switch  IsToggled="{Binding IsKnown,Mode=TwoWay}" />
            </StackLayout>
        </Frame>
        <Button Text="Добавить"  Command="{Binding AddLearnQuestionCommand}" 
   SemanticProperties.Hint="Counts the number of times you click"  />
    </VerticalStackLayout>
</ContentPage>